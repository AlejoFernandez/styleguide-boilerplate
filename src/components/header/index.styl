.header
  background transparent
  font-size 14px
  padding 20px 0 20px 0
  position static
  z-index 1000

  &.header--fixed
    background rgba(255, 255, 255, .8)
    position fixed

  &.header--basic .no-basic
    display none

  @media screen and (max-width 990px)
    padding 10px 0
    position static
    text-align left

.header a
  color #333

.header li *
  -webkit-backface-visibility hidden

.header :global(.navbar-header)
  float none
  position relative

  @media (min-width 992px)
    float left
    margin-left 0
    margin-right 0

.header nav
  background none
  border 0
  margin 0

.header nav :global(li.active) a
  background none
  color #000

.header nav ul
.header nav li
  margin 0

.header nav :global(.navbar-brand)
  color #000
  display inline-block
  float left
  font-size 24px
  font-weight 600
  margin 0
  margin-right 20px
  padding 0 15px 0 18px
  width 120px

  @media (min-width 992px)
    padding 0 15px 0 0

.header nav :global(.navbar-brand) a
  background url("data:image/svg+xml;base64,") center left no-repeat
  background-size 70%
  display block
  height 40px
  margin-top 5px
  width 130px

.header nav :global(.navbar-brand) img
  display none
  height 36px
  margin-right 10px
  position relative
  top 2px

.header nav :global(.navbar-brand) span
  display none

.header :global(.navbar-default .navbar-collapse)
  border-color transparent
  padding 0

.header :global(.navbar-default .navbar-collapse.collapse)
  display none !important

.header :global(.navbar-default .navbar-collapse.collapse.in)
  display block !important

@media (min-width 992px)
  .header :global(.navbar-default .navbar-collapse.collapse)
    display block !important

.header :global(.navbar-default .navbar-nav > .active) > a
.header :global(.navbar-default .navbar-default .navbar-nav > .active) > a:hover
.header :global(.navbar-default .navbar-default .navbar-nav > .active) > a:focus
  background transparent

.header :global(.navbar-default .navbar-nav > .open) > a
  background none

.header :global(.navbar-default .navbar-nav)
  float none !important

  &:global(.navbar-right)
    @media (min-width 992px)
      float right !important

  &:global(.navbar-left)
    @media (min-width 992px)
      float left !important

.header :global(.navbar-default .navbar-nav) > li
  float none

  @media (min-width 992px)
    float left

.header :global(.navbar-toggle)
  border 0
  display block

  &:hover
    background none

  &:hover :global(.icon-bar)
    background #000

  @media (min-width 992px)
    display none

.header .btn-dro
  background none
  color #777
  cursor pointer
  display inline-block
  line-height 20px
  padding 15px

  &:hover
    color #666

.header .btn-dro i
  display inline-block
  font-size 10px
  margin-left 5px
  position relative
  top 1px
  width 6px

.header :global(.dropdown .dropdown-menu > .active) > a
.header :global(.dropdown .dropdown-menu > .active) > a:hover
.header :global(.dropdown .dropdown-menu > .active) > a:focus
  background-color none

.header :global(.dropdown .dropdown-menu)
  background #fff
  border 0
  border-bottom 1px solid #f1f1f1
  border-radius 3px
  display block
  left 0
  min-width 130px
  transform none
  transition transform .1s cubic-bezier(.3, 0, 0, 1.3)

  @media (min-width 992px)
    opacity 0
    pointer-events none
    transform scale(.8) translateY(-10%)

.header :global(.dropdown .dropdown-menu) li > a
  line-height 20px
  padding 10px 15px

  @media (min-width 992px)
    padding 5px 20px

.header :global(.dropdown .dropdown-menu) li > a:hover
  background none

  @media (min-width 992px)
    background #f1f1f1

.header :global(.dropdown .dropdown-menu) ::after
  border-bottom 6px solid #fff
  border-left 6px solid transparent
  border-right 6px solid transparent
  content ''
  display inline-block
  left 26px
  position absolute
  top -6px

.header :global(.dropdown .dropdown-menu .divider)
  background-color rgba(0, 0, 0, .1)

  @media (min-width 992px)
    margin 8px 0

.header :global(.dropdown.open .dropdown-menu)
  opacity 1
  pointer-events auto
  transform none

.header a.login
  border 1px solid #f1f1f1
  border-radius 100px
  color #666
  display inline-block
  font-size 12px
  font-weight 600
  letter-spacing 1px
  line-height 30px
  margin-left 10px
  margin-top 10px
  padding 0
  padding-left 15px
  padding-right 14px
  text-transform uppercase

.header a.login:hover
  background #f1f1f1

@media (min-width 992px)
  .header :global(.navbar > .container .navbar-brand)
  .header :global(.navbar > .container-fluid .navbar-brand)
    margin-left 0

a.hiring
  background #44c7f4
  border-radius 3px
  color #fff
  display block
  font-size 11px
  font-weight 600
  left 120px
  padding 2px 6px
  position absolute
  text-transform uppercase
  top 13px

  @media (min-width 992px)
    left -104px

  &::after
    border-bottom 5px solid transparent
    border-left 0
    border-right 5px solid #44c7f4
    border-top 5px solid transparent
    content ""
    height 0
    left -4px
    position absolute
    top 6px
    width 0

    @media (min-width 992px)
      border-left 5px solid #44c7f4
      border-right 0
      left auto
      right -4px

/*==========  Header with dark background behind  ==========*/
@media screen and (min-width 990px)
  .header.header--dark
    border-bottom 1px solid rgba(255, 255, 255, .1)
    left 0
    position absolute
    right 0
    top 0

  .header.header--dark :global(h1.navbar-brand) a
    background-image url("//cdn.auth0.com/styleguide/1.0.0/img/logo-grey-horizontal.png")

  .header.header--dark :global(.navbar-default .navbar-nav > .active) > a
  .header.header--dark :global(.navbar-default .navbar-nav > .active) > a:hover
  .header.header--dark :global(.navbar-default .navbar-nav > .active) > a:focus
    color #fff

  .header.header--dark :global(.dropdown) a
    color #333

  .header.header--dark :global(.navbar-default .navbar-nav) > li > a
    color #d0d2d3

    &:hover
      background none
      color #fff

  .header.header--dark nav li .btn-dro
    color #d0d2d3

    &:hover
      color #fff

  .header.header--dark a.btn
    border-color #fff

    &:hover
      border-color #fff
      color #000

  .header.header--fixed-top
    background #fff
    background rgba(255, 255, 255, .9)
    left 0
    position fixed !important
    right 0
    transform translate3d(0, 0, 0)
    z-index 1030

/*==========  Responsive  ==========*/
@media screen and (max-width 990px)
  .header :global(.navbar-left)
    border-top 1px solid #f1f1f1

  .header li
    border-bottom 1px solid #f1f1f1
    padding 8px 0

  .header li:last-child
    border-bottom 0

  .header li a
    display block

  .header :global(li.dropdown)
    display block
    opacity 1
    overflow hidden
    padding 0

  .header :global(li.dropdown) .btn-dro
    display none

  .header :global(li.dropdown .divider)
    display none

  .header :global(li.dropdown ul.dropdown-menu)
    background #f8f8f8
    border-left 4px solid #ccc
    border-radius 0
    box-shadow none
    margin 0
    margin 0
    min-width 0
    opacity 1
    padding 0
    pointer-events all
    position static
    transform none
    transition none
    width 100%

  .header :global(li.dropdown ul.dropdown-menu) li:last-child
    border-bottom 0

  .header nav a.login
    display block
    font-size 14px
    margin-bottom 20px
    padding 10px
    text-align center
